<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroPageActivity">

    <LinearLayout
        android:id="@+id/introPageParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".IntroPageActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="@dimen/_175sdp"
                    android:layout_height="@dimen/_300sdp"
                    android:layout_marginBottom="@dimen/_20sdp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/progressPhoto"
                                    android:layout_width="@dimen/_160sdp"
                                    android:layout_height="@dimen/_220sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/introphoto1"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/progressPhoto2"
                                    android:layout_width="@dimen/_160sdp"
                                    android:layout_height="@dimen/_220sdp"
                                    android:layout_gravity="center"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop"
                                    android:visibility="gone"/>

                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/layout_rounded_border_intro"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/homeActionBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_11sdp"
                    android:paddingEnd="0dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:paddingTop="@dimen/_11sdp"
                        android:paddingBottom="@dimen/_11sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/audiowide"
                        android:maxLines="1"
                        android:text="@string/logo_string"
                        android:textColor="@color/colorTextLogo"
                        android:textSize="@dimen/_18sdp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:id="@+id/skipButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="@dimen/_11sdp"
                        android:paddingEnd="@dimen/_11sdp"
                        android:background="@drawable/layout_button_text">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_14sdp"
                            android:text="@string/option_skip"
                            android:textColor="@color/colorTextOption"
                            android:ellipsize="end"
                            android:maxLines="1"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/introTextLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/introText1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_28sdp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="@string/introText1"
                            android:textColor="@color/colorTextTitle"/>

                        <TextView
                            android:id="@+id/introText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_24sdp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="@string/introText2"
                            android:textColor="@color/colorTextTitle"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/introText3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_22sdp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="@string/introText3"
                            android:textColor="@color/colorTextTitle"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/introText4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_22sdp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="@string/introText4"
                            android:textColor="@color/colorTextTitle"
                            android:visibility="gone"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/introBubble1"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:src="@drawable/ic_circle_filled_white"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/introBubble2"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:src="@drawable/ic_radio_button_unchecked"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/introBubble3"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:src="@drawable/ic_radio_button_unchecked"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/introBubble4"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:src="@drawable/ic_radio_button_unchecked"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/continueButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:padding="@dimen/_8sdp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/transition_button_colored">

                    <TextView
                        android:id="@+id/continueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_14sdp"
                        android:text="@string/option_continue"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/colorTextButtonColored"/>

                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>